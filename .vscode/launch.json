{
  "version": "0.2.0",
  "configurations": [
      {
          "name": "Linux",
          "type": "cppdbg",
          "request": "launch",
          "program": "${workspaceFolder}/bin/main",
          "args": ["config_file.txt"],
          "stopAtEntry": false,
          "cwd": "${workspaceFolder}",
          "environment": [],
          "externalConsole": false,
          "MIMode": "gdb",
          "setupCommands": [
              {
                  "description": "Enable pretty-printing for gdb",
                  "text": "-enable-pretty-printing",
                  "ignoreFailures": true
              }
          ],
          "preLaunchTask": "build",
          "miDebuggerPath": "/usr/bin/gdb"
      }
  ]
}
